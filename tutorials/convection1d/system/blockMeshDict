/*--------------------------------*- C++ -*----------------------------------*\
  =========                 |
  \\      /  F ield         | OpenFOAM: The Open Source CFD Toolbox
   \\    /   O peration     | Website:  https://openfoam.org
    \\  /    A nd           | Version:  9
     \\/     M anipulation  |
\*---------------------------------------------------------------------------*/
FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// 1D uniform mesh

scale 1;

L #calc "2*constant::mathematical::pi";
N 128;


W 0.1; // other dimensions, have no effect on the simulation


// Calculated parameters

X0 #calc " - $L / 2";
X1 #calc "   $L / 2";

Y0 #calc " - $W / 2.0";
Y1 #calc "   $W / 2.0";

Z0 $Y0;
Z1 $Y1;

vertices
(
    // Even numbers - front face
    // Odd numbers  - back face
    ($X0  $Y0 $Z0) // 0
    ($X0  $Y0 $Z1) // 1
    ($X1  $Y0 $Z0) // 2
    ($X1  $Y0 $Z1) // 3

    ($X0  $Y1 $Z0) // 4
    ($X0  $Y1 $Z1) // 5
    ($X1  $Y1 $Z0) // 6
    ($X1  $Y1 $Z1) // 7

);

blocks
(
    hex ( 0  2  6  4  1  3  7  5) ($N 1 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    left
    {
        type cyclic;
        neighbourPatch right;
        faces
        (
            (0 1 5 4)
        );
    }

    right
    {
        type cyclic;
        neighbourPatch left;
        faces
        (
            (2 6 7 3)
        );
    }

    empty
    {
        type empty;
        faces
        (
            (0 2 3 1)
            (1 5 7 3)
            (4 5 7 6)
            (0 4 6 2)
        );
    }
);

// ************************************************************************* //
